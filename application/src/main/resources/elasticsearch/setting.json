{
  "analysis": {
    "analyzer": {
      "korean": {
        "tokenizer": "korean_tokenizer",
        "filter": [
          "nori_filter"
        ]
      },
      "standard": {
        "tokenizer": "standard"
      }
    },
    "tokenizer": {
      "korean_tokenizer": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed"
      }
    },
    "filter": {
      "ngram": {
        "type": "nGram",
        "min_gram": 2,
        "max_gram": 3
      },
      "nori_filter": {
        "type": "nori_part_of_speech",
        "stoptags": [
          "E",
          "IC",
          "J",
          "MAG",
          "MAJ",
          "MM",
          "SP",
          "SSC",
          "SSO",
          "SC",
          "SE",
          "XPN",
          "XSA",
          "XSN",
          "XSV",
          "UNA",
          "NA",
          "VSV"
        ]
      }
    }
  }
}
